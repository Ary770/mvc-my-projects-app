<h1>Edit Project</h1>

<form action="/projects/<%=@project.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <h3>Name</h3>
    <div class="form-group">
      <input type="text" name="project[name]" class="form-control" placeholder="<%=@project.name%>" >
    </div>

  <div class="form-group">
    <h3>Category</h3>
    <input type="text" class="form-control" name="category" placeholder="<%=@project.category.name%>">
  </div>

  <h3>Ideas</h3>
    <div class="form-group">
      <input type="text" name="ideas[]" class="form-control" placeholder="<%=@project.ideas[0].text%>">
    </div>

    <div class="form-group">
      <input type="text" name="ideas[]" class="form-control" placeholder="<%=@project.ideas[1].text%>">
    </div>

    <h3>Notes</h3>
      <div class="form-group">
        <input type="text" name="project[notes]" class="form-control" placeholder="<%=@project.notes%>">
      </div>

    <h3>Start By</h3>
    <div class="form-group">
      <input type="text" name="project[start_by]" class="form-control" placeholder="<%=@project.start_by%>">
    </div>

    <h3>Finish By</h3>
    <div class="form-group">
      <input type="text" name="project[finish_by]" class="form-control" placeholder="<%=@project.finish_by%>">
    </div>

    <p></p>
    <button type="submit" class="btn btn-primary">Edit Project</button>

  </form>
